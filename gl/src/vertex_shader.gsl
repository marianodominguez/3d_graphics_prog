#version 130

in vec3 vNormal;
in vec3 vPos;
in vec2 aTextCoord;

out vec3 FragPos;
out vec3 Normal;
out vec2 TexCoord;

uniform mat4 M;
uniform mat4 V;
uniform mat4 P;
uniform mat3 normal_matrix;

void main()
{
    FragPos =vec3( M * vec4(vPos, 1.0) );
    Normal = normal_matrix * vNormal;
    gl_Position = P*V*M*vec4(vPos, 1.0);
    TexCoord = vec2(aTextCoord.x, aTextCoord.y);
}

